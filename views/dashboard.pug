extends includes/main-layout.pug

block content
    .container
        .row
            .col-md-6
                .card
                    .card-header
                        ul.nav.nav-tabs.card-header-tabs
                            li.nav-item
                                a.nav-link.active(href='#') Tab #1
                            li.nav-item
                                a.nav-link(href='#') Tab #2
                            li.nav-item
                                a.nav-link(href='#') Tab #3
                    .card-body.tab-content
                        #party-condensed
                            if survivors.length
                                each survivor in survivors
                                    .row.no-gutters
                                        .col-md-2
                                            svg.bd-placeholder-img(width='100%', height='100%', xmlns='http://www.w3.org/2000/svg', preserveAspectRatio='xMidYMid slice', focusable='false', role='img', aria-label='Placeholder: Image')
                                                title Placeholder
                                                rect(width='100%', height='100%', fill='#868e96')
                                                text(x='50%', y='50%', fill='#dee2e6', dy='.3em') Player
                                        .col-md-7
                                            .card-body
                                                h5.card-title #{survivor.name}
                                                p.card-text
                                                    | Current activity: #{survivor.activity}
                                        .col-md-3
                                            button.btn.btn-sm.btn-outline-secondary
                                                i.material-icons search
                                            button Assign
                            else
                                p There are no survivors.
            .col-md-6
                #stats.card
                    .card-body
                        .row
                            .col-sm-4
                                i.material-icons restaurant
                                .progress
                                    .progress-bar.bg-success(role='progressbar', style='width: 25%', aria-valuenow='25', aria-valuemin='0', aria-valuemax='100')
                            .col-sm-4
                                i.material-icons local_drink
                                .progress
                                    .progress-bar.bg-info(role='progressbar', style='width: 50%', aria-valuenow='50', aria-valuemin='0', aria-valuemax='100')
                            .col-sm-4
                                i.material-icons monetization_on
                                .progress
                                    .progress-bar.bg-warning(role='progressbar', style='width: 75%', aria-valuenow='75', aria-valuemin='0', aria-valuemax='100')
                        .row(style='margin-top:10px;')
                            .col-sm-4
                                i.material-icons stars
                                .progress
                                    .progress-bar.bg-success(role='progressbar', style='width: 78%', aria-valuenow='78', aria-valuemin='0', aria-valuemax='100')
                            .col-sm-4
                                i.material-icons supervisor_account
                                .progress
                                    .progress-bar.bg-info(role='progressbar', style='width: 20%', aria-valuenow='20', aria-valuemin='0', aria-valuemax='100')
                            .col-sm-4
                                i.material-icons home
                                .progress
                                    .progress-bar.bg-warning(role='progressbar', style='width: 100%', aria-valuenow='100', aria-valuemin='0', aria-valuemax='100')
                #dialog.card
                    h5.card-header Dialog
                    .card-body
                        | asdf